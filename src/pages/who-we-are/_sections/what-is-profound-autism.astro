---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';
import Button from '../../../components/ui/Button.astro';

const LEARN_MORE_HEADING = 'Learn More:';
const SUPPORT_LINKS_HEADING = 'Support Creekside:';
const LEARN_MORE_LINKS = [
  { name: 'Our Programs', href: '/what-we-do/' },
  { name: 'Our Students', href: '/families/' },
];
const SUPPORT_LINKS = [
  { name: 'Donate', href: '/support/donate/' },
  { name: 'Volunteer', href: '/support/#volunteer' },
  { name: 'Student Wish List', href: '/support/#student-wish-list' },
  { name: 'Join Our Staff', href: '/join-us/join-our-team/' },
];

interface Props {
  sectionHeading?: string;
  definition: string;
  image?: { asset?: { url: string }; alt?: string };
}

const { sectionHeading = '', definition = '', image } = Astro.props;
const imageUrl = image?.asset?.url ?? '';
const imageAlt = image?.alt ?? '';
---

<section id="what-is-profound-autism" class="py-20" style={{ backgroundColor: COLORS.cream }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div>
        <SectionHeading>{sectionHeading}</SectionHeading>
        <p class="text-xl text-gray-700 leading-relaxed mt-6">
          {definition}
        </p>

        <div class="mt-12 space-y-8">
          <div>
            <h4 class="text-lg font-semibold mb-4" style={{ color: COLORS.blue.navy }}>{LEARN_MORE_HEADING}</h4>
            <div class="flex flex-wrap gap-4">
              {LEARN_MORE_LINKS.map((link) => (
                <Button variant="primary" href={link.href} className="shadow-lg transform hover:-translate-y-0.5">
                  {link.name}
                </Button>
              ))}
            </div>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4" style={{ color: COLORS.blue.navy }}>{SUPPORT_LINKS_HEADING}</h4>
            <div class="flex flex-wrap gap-4">
              {SUPPORT_LINKS.map((link) => (
                <Button variant="outline" href={link.href} className="shadow-md">
                  {link.name}
                </Button>
              ))}
            </div>
          </div>
        </div>
      </div>
      <div class="flex justify-center lg:justify-end">
        <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md">
          <img
            src={imageUrl}
            alt={imageAlt}
            class="w-full h-auto object-contain"
            loading="lazy"
            width="600"
            height="360"
          />
        </div>
      </div>
    </div>
  </div>
</section>
