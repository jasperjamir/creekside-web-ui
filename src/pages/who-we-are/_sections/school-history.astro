---
import { COLORS } from '../../../constants';

interface Props {
  imageSrc: string;
  imageAlt: string;
  paragraphs: readonly string[];
}

const { imageSrc, imageAlt, paragraphs } = Astro.props;
---

<section
  id="school-history"
  class="py-16 lg:py-20"
  style={{ backgroundColor: COLORS?.blue?.navy ?? '#052049' }}
>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center max-w-6xl mx-auto">
      <div class="flex justify-center lg:justify-start order-first">
        <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md aspect-[4/3]">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="w-full h-full object-cover object-center"
            loading="lazy"
            width="600"
            height="450"
          />
        </div>
      </div>
      <div class="space-y-6">
        {paragraphs.map((html) => (
          <p class="text-lg md:text-xl text-blue-50 leading-relaxed" set:html={html} />
        ))}
      </div>
    </div>
  </div>
</section>
