---
import { COLORS } from '../../../constants';

interface Props {
  kicker: string;
  title: string;
  quote: string;
  attribution: string;
  imageSrc: string;
  imageAlt: string;
}

const { kicker = '', title = '', quote = '', attribution = '', imageSrc = '', imageAlt = '' } = Astro.props;
---

<section
  id="jonah-legacy"
  class="py-16 lg:py-20"
  style={{ backgroundColor: COLORS?.white ?? '#ffffff' }}
>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center max-w-6xl mx-auto">
      <div class="flex justify-center lg:justify-start order-first">
        <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md aspect-[4/3]">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="w-full h-full object-cover object-center"
            loading="lazy"
            width="600"
            height="450"
          />
        </div>
      </div>
      <div class="space-y-6">
        <p class="text-sm md:text-base font-medium uppercase tracking-wider text-gray-500">
          {kicker}
        </p>
        <h2 class="text-3xl md:text-4xl font-bold" style={{ color: COLORS?.blue?.navy ?? '#1e3a5f' }}>
          {title}
        </h2>
        <blockquote class="text-lg md:text-xl text-gray-700 leading-relaxed italic border-l-4 pl-6"
          style={{ borderColor: COLORS?.blue?.royal ?? '#2563eb' }}
        >
          {quote}
        </blockquote>
        <p class="text-base md:text-lg text-gray-600 not-italic">
          {attribution}
        </p>
      </div>
    </div>
  </div>
</section>
