---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Member {
  name: string;
  role: string;
}

interface Props {
  title: string;
  members: readonly Member[];
}

const { title, members } = Astro.props;
---

<section
  id="staff-leadership"
  class="py-16 lg:py-20"
  style={{ backgroundColor: COLORS?.white ?? '#ffffff' }}
>
  <div class="container mx-auto px-4 lg:px-8">
    <SectionHeading>{title}</SectionHeading>
    <ul class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl">
      {members.map((member) => (
        <li class="flex flex-col py-3 border-b border-gray-200 last:border-b-0 sm:last:border-b sm:border-b-0">
          <span class="font-semibold text-lg" style={{ color: COLORS?.blue?.navy ?? '#052049' }}>
            {member.name}
          </span>
          <span class="text-gray-600 text-base mt-0.5">{member.role}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
