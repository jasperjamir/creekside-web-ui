---
interface Props {
  imageSrc: string;
  imageAlt: string;
  kicker: string;
  name: string;
  dates: string;
  quote: string;
}

const { imageSrc = '', imageAlt = '', kicker = '', name = '', dates = '', quote = '' } = Astro.props;
---

<section class="memoriam-section font-sans" id="jonah-memoriam">
  <div class="hero-image-container">
    <img src={imageSrc} alt={imageAlt} class="hero-image" loading="lazy" />
    <div class="blend-overlay"></div>
    <div class="overlay-text-wrapper">
      <span class="kicker"><em>{kicker}</em></span>
      <h2 class="name">{name}</h2>
      <span class="dates"><em>{dates}</em></span>
    </div>
  </div>

  <div class="quote-container">
    <p class="quote-text"><em>{quote}</em></p>
  </div>
</section>

<style>
  .memoriam-section {
    --color-bg-navy: #052049;
    --color-text-white: #ffffff;
    background-color: var(--color-bg-navy);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-image-container {
    position: relative;
    width: 100%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
  }

  .hero-image {
    width: 100%;
    height: auto;
    max-height: 600px;
    object-fit: cover;
    display: block;
  }

  .blend-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to top, var(--color-bg-navy) 0%, transparent 100%);
    z-index: 1;
  }

  .overlay-text-wrapper {
    position: absolute;
    bottom: 10%;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--color-text-white);
    padding: 0 1rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
  }

  .kicker {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .name {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
    color: var(--color-text-white);
  }

  .dates {
    font-size: 1.25rem;
  }

  .quote-container {
    padding: 4rem 1.5rem 6rem 1.5rem;
    max-width: 800px;
    text-align: center;
  }

  .quote-text {
    color: var(--color-text-white);
    font-size: 1.3rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .name {
      font-size: 2.5rem;
    }

    .kicker,
    .dates {
      font-size: 1.1rem;
    }

    .quote-text {
      font-size: 1.15rem;
    }

    .quote-container {
      padding: 3rem 1rem 4rem 1rem;
    }
  }
</style>
