---
import PageHeader from '../../../components/sections/PageHeader.astro';
import { ASSETS_BASE_URL } from '../../../constants';

interface Props {
  body: string;
  body2?: string;
  imageUrl?: string;
}

const { body = '', body2, imageUrl } = Astro.props;
const imgSrc = imageUrl ?? `${ASSETS_BASE_URL}/images/who-we-are--we-are-a-community.png`;
---

<PageHeader
  sectionId="our-story"
  heading="Our Story"
  body={body}
  body2={body2}
  imageUrl={imgSrc}
  imageAlt="Creekside School - staff or campus"
/>
