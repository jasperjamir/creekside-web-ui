---
import { COLORS, ASSETS_BASE_URL } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  body: string;
  imageUrl?: string;
}

const { body = '', imageUrl } = Astro.props;
const imgSrc = imageUrl ?? `${ASSETS_BASE_URL}/images/who-we-are--we-are-a-community.png`;
---

<section id="our-story" class="py-20" style={{ backgroundColor: COLORS.cream }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="max-w-2xl">
        <SectionHeading>Our Story</SectionHeading>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed font-light mt-8">
          {body}
        </p>
        <div class="h-1 w-24 mt-8 rounded-full" style={{ backgroundColor: COLORS.blue.royal }}></div>
      </div>
      <div class="flex justify-center lg:justify-end order-first lg:order-none">
        <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md aspect-[5/3]">
          <img
            src={imgSrc}
            alt="Creekside School - staff or campus"
            class="w-full h-full object-cover object-center"
            loading="lazy"
            width="600"
            height="360"
          />
        </div>
      </div>
    </div>
  </div>
</section>
