---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';

interface Props {
  headline: string;
  subheading: string;
  body: string;
  image: { asset: { url: string }; alt?: string };
}

const { headline = '', subheading = '', body = '', image } = Astro.props;
---

<ImageTextSection
  sectionId="lifelong-learning"
  title={headline}
  subheading={subheading}
  imageUrl={image.asset.url}
  imageAlt={image.alt ?? ''}
  imageLeft={true}
  backgroundColor="white"
>
  <p class="text-lg leading-relaxed">
    {body}
  </p>
</ImageTextSection>
