---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';
import { ASSETS_BASE_URL } from '../../../constants';

interface Props {
  headline: string;
  subheading: string;
  body: string;
  image?: { asset?: { url: string }; alt?: string };
}

const { headline = '', subheading = '', body = '', image } = Astro.props;
const imgSrc = image?.asset?.url ?? `${ASSETS_BASE_URL}/images/who-we-are--lifelong-learning.jpg`;
const imgAlt = image?.alt ?? 'Lifelong learning at Creekside';
---

<ImageTextSection
  sectionId="lifelong-learning"
  title={headline}
  subheading={subheading}
  imageUrl={imgSrc}
  imageAlt="Lifelong learning at Creekside"
  imageLeft={true}
  backgroundColor="white"
>
  <p class="text-lg leading-relaxed">
    {body}
  </p>
</ImageTextSection>\
