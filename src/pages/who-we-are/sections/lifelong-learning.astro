---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';

interface Props {
  headline: string;
  subheading: string;
  body: string;
  image?: { asset?: { url: string }; alt?: string };
}

const { headline = '', subheading = '', body = '', image } = Astro.props;
const imageUrl = image?.asset?.url ?? '';
---

<ImageTextSection
  sectionId="lifelong-learning"
  title={headline}
  subheading={subheading}
  imageUrl={imageUrl}
  imageAlt="Lifelong learning at Creekside"
  imageLeft={true}
  backgroundColor="white"
>
  <p class="text-lg leading-relaxed">
    {body}
  </p>
</ImageTextSection>
