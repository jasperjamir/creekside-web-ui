---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroSection from './_sections/hero.astro';
import WhySupportMatters from './_sections/why-support-matters.astro';
import WaysToGive from './_sections/ways-to-give.astro';
import WhatGiftMakesPossible from './_sections/what-gift-makes-possible.astro';
import { WHY_SUPPORT_MATTERS_CONTENT } from './_constants/why-support-matters';

// Hero content (same as home page first section)
const heroText = {
  imageAlt: 'Adult and child engaged in art activity at Creekside School',
  headingPrefix: 'Help Students with Profound Autism ',
  headingHighlight: 'Thrive',
  subheading: 'Your generosity fuels individualized education, therapy, and family support at Creekside.',
  donateCta: 'Donate',
  donateHref: '/support/donate',
};
---

<PageLayout title="Support Us - The Creekside School">
  <HeroSection {...heroText} />
  <WhySupportMatters content={WHY_SUPPORT_MATTERS_CONTENT} />
  <WaysToGive />
  <WhatGiftMakesPossible />
</PageLayout>
