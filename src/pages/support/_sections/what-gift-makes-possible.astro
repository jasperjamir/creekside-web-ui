---
import { COLORS } from '../../../constants';

interface GiftImpactItem {
  title?: string;
  text?: string;
  iconSvg?: string;
}

interface Props {
  sectionTitle?: string;
  items?: GiftImpactItem[];
}

const { sectionTitle = '', items = [] } = Astro.props;
---

<section class="py-20 relative font-sans" style={{ backgroundColor: COLORS.blue.navy }}>
  <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-5"></div>
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    {sectionTitle && (
      <h2 class="text-3xl font-bold text-white text-center mb-12">
        {sectionTitle}
      </h2>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {items.map((item) => (
        <div
          class="group flex flex-col items-center p-8 bg-white/5 border border-white/10 rounded-2xl hover:bg-white/10 transition-all duration-300 text-center nav-grid-item"
          style={{ borderColor: 'rgba(255, 255, 255, 0.1)' }}
        >
          <div class="mb-4 group-hover:scale-110 transition-transform" style={{ color: COLORS.green }}>
            <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center" style={{ color: COLORS.green }}>
              {item.iconSvg && <div class="gift-icon-svg w-6 h-6" set:html={item.iconSvg} />}
            </div>
          </div>
          <p class="text-sm leading-relaxed m-0" style={{ color: COLORS.blue.light }}>
            {item.title && <strong class="text-white">{item.title}</strong>} {item.text ?? ''}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .gift-icon-svg :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>

<script>
  const navItems = document.querySelectorAll('.nav-grid-item');
  const greenColor = '#A4D16A';

  navItems.forEach((item) => {
    const el = item as HTMLElement;
    el.addEventListener('mouseenter', () => {
      el.style.borderColor = greenColor;
    });
    el.addEventListener('mouseleave', () => {
      el.style.borderColor = 'rgba(255, 255, 255, 0.1)';
    });
  });
</script>
