---
interface Props {
  title?: string;
  bodyHtml?: string;
}

const { title = '', bodyHtml = '' } = Astro.props;
---

<section class="credibility-section font-sans">
  <div class="container">
    {title && <h2 class="credibility-title">{title}</h2>}
    {bodyHtml && (
      <p class="credibility-body">
        <span set:html={bodyHtml} />
      </p>
    )}
  </div>
</section>

<style>
  .credibility-section {
    background-color: #000000;
    color: #ffffff;
    padding: 5rem 5%;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .credibility-title {
    font-size: 2rem;
    font-weight: 800;
    margin: 0 0 1.25rem 0;
    letter-spacing: -0.02em;
    color: #ffffff;
  }

  .credibility-body {
    font-size: 1.125rem;
    line-height: 1.6;
    font-weight: 300;
    color: #ffffff;
    margin: 0;
  }

  .credibility-body a {
    color: #ffffff;
    text-decoration: none;
  }

  @media (min-width: 768px) {
    .credibility-section {
      padding: 6rem 5%;
    }

    .credibility-title {
      font-size: 2.25rem;
      margin-bottom: 1.5rem;
    }

    .credibility-body {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 767px) {
    .credibility-section {
      padding: 4rem 1.5rem;
    }

    .credibility-title {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    .credibility-body {
      font-size: 1rem;
    }
  }
</style>
