---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  title?: string;
  description?: string;
  imageUrl?: string;
  imageAlt?: string;
}

const { title = '', description = '', imageUrl = '', imageAlt = '' } = Astro.props;
---

<section class="why-support-section font-sans" style={{ backgroundColor: COLORS.white }}>
  <div class="container">
    <div class="text-content">
      {title && <SectionHeading>{title}</SectionHeading>}

      {description && <p class="description">{description}</p>}
    </div>

    <div class="image-wrapper">
      {imageUrl && <img src={imageUrl} alt={imageAlt} loading="lazy" />}
    </div>
  </div>
</section>

<style>
  .why-support-section {
    padding: 4rem 5%;
    font-family: inherit;
  }

  .container {
    display: flex;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .text-content {
    flex: 1.2;
  }

  .image-wrapper {
    flex: 1;
  }

  .image-wrapper img {
    width: 100%;
    border-radius: 2rem;
    object-fit: cover;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
  }

  @media (max-width: 968px) {
    .container {
      flex-direction: column;
      gap: 2rem;
    }

    .image-wrapper {
      order: 2;
    }
  }
</style>
