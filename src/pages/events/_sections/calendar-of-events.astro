---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  title?: string;
  imageUrl?: string;
  imageAlt?: string;
}

const { title = '', imageUrl = '', imageAlt = '' } = Astro.props;
---

<section id="calendar-of-events" class="calendar-of-events-section font-sans" style={{ backgroundColor: COLORS.white }}>
  <div class="container mx-auto px-4 lg:px-8">
    {title && <SectionHeading>{title}</SectionHeading>}
    <div class="mt-8 max-w-5xl mx-auto">
      {imageUrl && (
        <div class="w-full overflow-hidden rounded-2xl shadow-lg aspect-[4/3] bg-gray-100">
          <img
            src={imageUrl}
            alt={imageAlt}
            class="w-full h-full object-cover object-center"
            loading="lazy"
            width="900"
            height="675"
          />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .calendar-of-events-section {
    padding: 4rem 0;
    font-family: inherit;
  }
</style>
