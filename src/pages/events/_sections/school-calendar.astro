---
import { ASSETS_BASE_URL, COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Detail {
  heading: string;
  text?: string;
  list?: string[];
}

interface Props {
  content: {
    title: string;
    details: Detail[];
    footerText: string;
    image: { src: string; alt: string };
  };
}

const { content } = Astro.props;
const imageSrc =
  content.image.src.startsWith('http') || content.image.src.startsWith('/')
    ? content.image.src
    : `${ASSETS_BASE_URL}/images/${content.image.src}`;
---

<section id="school-calendar" class="school-calendar-section font-sans" style={{ backgroundColor: COLORS.white }}>
  <div class="container">
    <div class="content-grid">
      <div class="text-content">
        <div class="flex justify-center mb-8">
          <SectionHeading>{content.title}</SectionHeading>
        </div>
        <div class="details">
          {content.details.map((detail) => (
            <div class="detail-block">
              <h3 class="detail-heading" style={{ color: COLORS.blue.navy }}>{detail.heading}</h3>
              {detail.text && <p class="detail-text">{detail.text}</p>}
              {detail.list && detail.list.length > 0 && (
                <ul class="detail-list">
                  {detail.list.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </div>
        {content.footerText && (
          <p class="footer-text" style={{ color: COLORS.blue.navy }}>{content.footerText}</p>
        )}
      </div>
      <div class="image-wrapper">
        <img src={imageSrc} alt={content.image.alt} loading="lazy" />
      </div>
    </div>
  </div>
</section>

<style>
  .school-calendar-section {
    padding: 4rem 5%;
    font-family: inherit;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-grid {
    display: flex;
    gap: 4rem;
    align-items: flex-start;
  }

  .text-content {
    flex: 1.2;
  }

  .image-wrapper {
    flex: 1;
  }

  .image-wrapper img {
    width: 100%;
    border-radius: 1rem;
    object-fit: cover;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  .details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .detail-heading {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .detail-text {
    font-size: 1rem;
    line-height: 1.6;
    color: #374151;
    margin: 0;
  }

  .detail-list {
    margin: 0;
    padding-left: 1.5rem;
    font-size: 1rem;
    line-height: 1.8;
    color: #374151;
  }

  .footer-text {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
  }

  @media (max-width: 968px) {
    .content-grid {
      flex-direction: column;
    }

    .image-wrapper {
      order: -1;
    }
  }
</style>
