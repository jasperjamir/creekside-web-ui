---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroSection from './_sections/hero.astro';
import CalendarOfEventsSection from './_sections/calendar-of-events.astro';
import SchoolCalendarSection from './_sections/school-calendar.astro';
import { EVENTS_HERO, SCHOOL_CALENDAR_CONTENT, CALENDAR_CONTENT } from './_constants';

const heroText = {
  headingPrefix: EVENTS_HERO.headingPrefix,
  headingHighlight: EVENTS_HERO.headingHighlight,
  subheading: EVENTS_HERO.subheading,
  ctaText: EVENTS_HERO.ctaText,
  ctaHref: EVENTS_HERO.ctaHref,
};
---

<PageLayout title="Events & Updates - The Creekside School">
  <div class="animate-fade-in font-sans">
    <HeroSection {...heroText} />
    <CalendarOfEventsSection content={CALENDAR_CONTENT} />
    <SchoolCalendarSection content={SCHOOL_CALENDAR_CONTENT} />
  </div>
</PageLayout>
