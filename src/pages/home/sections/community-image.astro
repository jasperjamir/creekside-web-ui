---
interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="py-16">
  <div class="container mx-auto px-4 lg:px-8">
    {title && <h2 class="text-2xl font-bold mb-4">{title}</h2>}
    {description && <p class="text-gray-600">{description}</p>}
    <!-- Community image will be added here -->
  </div>
</section>
