---
import { ASSETS_BASE_URL } from '../../../constants';

interface Props {
  title?: string;
  description?: string;
  image?: { asset?: { url: string }; alt?: string };
}

const { title = '', description = '', image } = Astro.props;
const imageUrl = image?.asset?.url ?? `${ASSETS_BASE_URL}/images/home--community.jpg`;
const imageAlt = image?.alt ?? '';
---

<section class="py-16">
  <div class="container mx-auto px-4 lg:px-8">
    {title && <h2 class="text-2xl font-bold mb-4">{title}</h2>}
    {description && <p class="text-gray-600">{description}</p>}
    <figure class="mt-6">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-full rounded-lg object-cover max-h-[400px]"
        loading="lazy"
      />
    </figure>
  </div>
</section>
