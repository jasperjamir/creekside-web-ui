---
interface Props {
  title?: string;
  description?: string;
  image: { asset: { url: string }; alt?: string };
}

const { title = '', description = '', image } = Astro.props;
---

<section class="py-16">
  <div class="container mx-auto px-4 lg:px-8">
    {title && <h2 class="text-2xl font-bold mb-4">{title}</h2>}
    {description && <p class="text-gray-600">{description}</p>}
    <figure class="mt-6">
      <img
        src={image.asset.url}
        alt={image.alt ?? ''}
        class="w-full rounded-lg object-cover max-h-[400px]"
        loading="lazy"
      />
    </figure>
  </div>
</section>
