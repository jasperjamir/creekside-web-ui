---
import { COLORS } from '../../../constants';

interface NavItem {
  title: string;
  icon: string;
  link: string;
}

interface Props {
  heading: string;
  linkLabel: string;
  items: readonly NavItem[];
}

const { heading = '', linkLabel = '', items = [] } = Astro.props;
const iconClass = 'w-6 h-6';
---

<section class="py-20 relative" style={{ backgroundColor: COLORS.blue.navy }}>
  <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-5"></div>
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <h2 class="text-3xl font-bold text-white text-center mb-12">
      {heading}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {items.map((item) => (
        <a
          href={item.link}
          class="group flex flex-col items-center p-8 bg-white/5 border border-white/10 rounded-2xl hover:bg-white/10 transition-all duration-300 text-center nav-grid-item"
          style={{ borderColor: 'rgba(255, 255, 255, 0.1)' }}
        >
          <div class="mb-4 group-hover:scale-110 transition-transform" style={{ color: COLORS.green }}>
            <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center" style={{ color: COLORS.green }}>
              {item.icon === 'BookOpen' && (
                <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
              {item.icon === 'Users' && (
                <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              )}
              {item.icon === 'Heart' && (
                <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              )}
              {item.icon === 'User' && (
                <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              )}
              {!['BookOpen', 'Users', 'Heart', 'User'].includes(item.icon) && (
                <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
            </div>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
          <span class="group-hover:text-white flex items-center text-sm font-semibold transition-colors justify-center" style={{ color: COLORS.blue.light }}>
            {linkLabel}
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  // Add hover effect for border color
  const navItems = document.querySelectorAll('.nav-grid-item');
  const greenColor = '#A4D16A';
  
  navItems.forEach((item) => {
    const el = item as HTMLElement;
    el.addEventListener('mouseenter', () => {
      el.style.borderColor = greenColor;
    });
    el.addEventListener('mouseleave', () => {
      el.style.borderColor = 'rgba(255, 255, 255, 0.1)';
    });
  });
</script>
