---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';

interface Props {
  title?: string;
  subheading?: string;
  overviewParagraph?: string;
  approachParagraph?: string;
  image: { asset: { url: string }; alt?: string };
  approachImageAlt?: string;
}

const {
  title = '',
  subheading = '',
  overviewParagraph = '',
  approachParagraph = '',
  image,
  approachImageAlt = '',
} = Astro.props;
---

<ImageTextSection
  sectionId="adult-program"
  title={title}
  subheading={subheading}
  body={overviewParagraph}
  imageUrl={image.asset.url}
  imageAlt={image.alt ?? ''}
  imageLeft={false}
  backgroundColor="white"
/>

<ImageTextSection
  sectionId="adult-program-approach"
  body={approachParagraph}
  imageUrl={image.asset.url}
  imageAlt={approachImageAlt ? approachImageAlt : (image.alt ?? '')}
  imageLeft={true}
  backgroundColor="cream"
/>
