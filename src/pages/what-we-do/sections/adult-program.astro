---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';

interface Props {
  title?: string;
  subheading?: string;
  overviewParagraph?: string;
  approachParagraph?: string;
  image?: { asset?: { url: string }; alt?: string };
  approachImage?: { asset?: { url: string }; alt?: string };
}

const {
  title = '',
  subheading = '',
  overviewParagraph = '',
  approachParagraph = '',
  image,
  approachImage,
} = Astro.props;
const overviewImageUrl = image?.asset?.url ?? '';
const approachImageUrl = approachImage?.asset?.url ?? '';
const overviewAlt = image?.alt ?? 'Creekside Adult Program';
const approachAlt = approachImage?.alt ?? 'Creekside Adult Program - community and activities';
---

<ImageTextSection
  sectionId="adult-program"
  title={title}
  subheading={subheading}
  body={overviewParagraph}
  imageUrl={overviewImageUrl}
  imageAlt={overviewAlt}
  imageLeft={false}
  backgroundColor="white"
/>

<ImageTextSection
  sectionId="adult-program-approach"
  body={approachParagraph}
  imageUrl={approachImageUrl}
  imageAlt={approachAlt}
  imageLeft={true}
  backgroundColor="cream"
/>
