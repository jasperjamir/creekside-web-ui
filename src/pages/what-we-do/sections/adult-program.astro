---
import ImageTextSection from '../../../components/sections/ImageTextSection.astro';

interface Props {
  title?: string;
  subheading?: string;
  overviewParagraph?: string;
  approachParagraph?: string;
  image?: { asset?: { url: string }; alt?: string };
  approachImageAlt?: string;
}

const {
  title = '',
  subheading = '',
  overviewParagraph = '',
  approachParagraph = '',
  image,
  approachImageAlt = '',
} = Astro.props;
const imageUrl = image?.asset?.url ?? '';
const imageAlt = image?.alt ?? '';
---

<ImageTextSection
  sectionId="adult-program"
  title={title}
  subheading={subheading}
  body={overviewParagraph}
  imageUrl={imageUrl}
  imageAlt={imageAlt}
  imageLeft={false}
  backgroundColor="white"
/>

<ImageTextSection
  sectionId="adult-program-approach"
  body={approachParagraph}
  imageUrl={imageUrl}
  imageAlt={approachImageAlt ? approachImageAlt : imageAlt}
  imageLeft={true}
  backgroundColor="cream"
/>
