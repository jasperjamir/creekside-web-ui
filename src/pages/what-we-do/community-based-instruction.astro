---
import { sanityClient } from 'sanity:client'
import PageLayout from '../../layouts/PageLayout.astro'
import PageHeader from '../../components/sections/PageHeader.astro'
import ImageTextSection from '../../components/sections/ImageTextSection.astro'
import SectionHeading from '../../components/ui/SectionHeading.astro'
import { ASSETS_BASE_URL, COLORS } from '../../constants'

const DEFAULT_IMAGES = {
  hero: {
    url: `${ASSETS_BASE_URL}/images/what-we-do--community-partnerships.jpg`,
    alt: 'Community-Based Instruction at Creekside',
  },
  approach: {
    url: `${ASSETS_BASE_URL}/images/what-we-do--community-partnerships.jpg`,
    alt: 'CBI activities and community engagement',
  },
  partnerLogo: {
    url: `${ASSETS_BASE_URL}/images/partners/university-partners.png`,
    alt: 'Partner logo',
  },
}

function withDefaultImage(
  cmsImage: { asset?: { url: string }; alt?: string } | undefined,
  defaultImage: { url: string; alt: string }
) {
  if (cmsImage?.asset?.url) {
    return { url: cmsImage.asset.url, alt: cmsImage.alt ?? defaultImage.alt }
  }
  return { url: defaultImage.url, alt: defaultImage.alt }
}

const QUERY = /* groq */ `*[_type == "communityBasedInstruction"][0] {
  title,
  heroText {
    heading,
    body,
    image { asset->{ _id, url } }
  },
  approachText {
    body,
    image { asset->{ _id, url } }
  },
  communityPartnersText {
    heading,
    body,
    partners[] {
      name,
      description,
      image { asset->{ _id, url } }
    }
  }
}`

const data = await sanityClient.fetch(QUERY)

const content = {
  pageTitle: data?.title ?? '',
  hero: {
    heading: data?.heroText?.heading ?? '',
    body: data?.heroText?.body ?? '',
    image: withDefaultImage(data?.heroText?.image, DEFAULT_IMAGES.hero),
  },
  approach: {
    body: data?.approachText?.body ?? '',
    image: withDefaultImage(data?.approachText?.image, DEFAULT_IMAGES.approach),
  },
  communityPartners: {
    heading: data?.communityPartnersText?.heading ?? '',
    body: data?.communityPartnersText?.body ?? '',
    partners: (data?.communityPartnersText?.partners ?? []).map((p: { name?: string; description?: string; image?: { asset?: { url: string }; alt?: string } }) => ({
      name: p?.name ?? '',
      description: p?.description ?? '',
      image: withDefaultImage(p?.image, DEFAULT_IMAGES.partnerLogo),
    })),
  },
}
---

<PageLayout title={content.pageTitle || 'Community-Based Instruction - The Creekside School'}>
  <div class="animate-fade-in font-sans">
    <PageHeader
      sectionId="cbi-hero"
      heading={content.hero.heading}
      body={content.hero.body}
      imageUrl={content.hero.image.url}
      imageAlt={content.hero.image.alt}
    />
    <ImageTextSection
      sectionId="cbi-approach"
      body={content.approach.body}
      imageUrl={content.approach.image.url}
      imageAlt={content.approach.image.alt}
      imageLeft={false}
      backgroundColor="white"
    />

    <section id="community-partners" class="py-20" style={{ backgroundColor: COLORS.white }}>
      <div class="container mx-auto px-4 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <SectionHeading>{content.communityPartners.heading}</SectionHeading>
          <h3 class="text-lg text-gray-600 mt-4 leading-relaxed">
            {content.communityPartners.body}
          </h3>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16 max-w-5xl mx-auto">
          {content.communityPartners.partners.map((partner: { name: string; description: string; image: { url: string; alt: string } }) => (
            <article class="flex flex-col gap-4">
              <div class="min-h-[60px] flex items-center">
                <img
                  src={partner.image.url}
                  alt={partner.name}
                  class="max-h-14 w-auto max-w-[180px] object-contain"
                  loading="lazy"
                  width="180"
                  height="56"
                />
              </div>
              <h3 class="text-lg font-bold" style={{ color: COLORS.blue.navy }}>{partner.name}</h3>
              <p class="text-gray-600 leading-relaxed text-base">{partner.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</PageLayout>
