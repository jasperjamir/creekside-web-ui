---
interface Props {
  text?: string;
  email?: string;
}

const { text = 'Questions? Email ', email = 'jobs@creeksideschool.org' } = Astro.props;
---

<section class="py-20 bg-white relative overflow-hidden font-sans">
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto">
      <p class="text-xl md:text-2xl text-black leading-relaxed">
        {text}<strong>{email}</strong>.
      </p>
    </div>
  </div>
</section>
