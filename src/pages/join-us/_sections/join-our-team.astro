---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  title: string;
  description: string;
  image: { asset?: { url: string }; alt?: string };
  benefits: readonly string[];
}

const { title, description, image, benefits } = Astro.props;
const imageUrl = image?.asset?.url ?? '';
---

<section class="join-section font-sans" style={{ backgroundColor: COLORS.white }}>
  <div class="container">
    <div class="image-wrapper">
      <img src={imageUrl} alt="A Creekside teacher working one-on-one with a student on a learning activity." loading="lazy" />
    </div>

    <div class="text-content">
      <SectionHeading>{title}</SectionHeading>

      <p class="description">
        {description}
      </p>

      <ul class="benefits-list">
        {benefits.map((benefit) => (
          <li class="benefits-list-item">
            <span class="benefits-list-icon" style={{ backgroundColor: COLORS.green }}>
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
              </svg>
            </span>
            <span class="benefits-list-text">{benefit}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .join-section {
    padding: 4rem 5%;
    font-family: inherit;
  }

  .container {
    display: flex;
    gap: 4rem;
    align-items: flex-start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .image-wrapper {
    flex: 1;
  }

  .image-wrapper img {
    width: 100%;
    border-radius: 2rem;
    object-fit: cover;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .text-content {
    flex: 1.2;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
  }

  .benefits-list-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 1.05rem;
    line-height: 1.4;
    color: #1a1a1a;
  }

  .benefits-list-icon {
    shrink: 0;
    margin-top: 0.375rem;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .benefits-list-text {
    flex: 1;
  }

  @media (max-width: 968px) {
    .container {
      flex-direction: column;
      gap: 2rem;
    }

    .image-wrapper {
      order: 2;
    }
  }
</style>
