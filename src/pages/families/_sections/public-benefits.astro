---
import { ASSETS_BASE_URL, COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  content: {
    title: string;
    description: string;
    button: { text: string; link: string };
    image: { src: string; alt: string };
  };
}

const { content: contentProp } = Astro.props;
const content = contentProp ?? {
  title: 'Public Benefits',
  description:
    "Depending on your income, your child's age and diagnosis, and other factors, there are many programs you can take advantage of.",
  button: { text: 'View the complete <u>list here.</u>', link: '/resources/public-benefits-list' },
  image: { src: 'support--why-support-matters.png', alt: 'Students and staff at Creekside engaging in a learning activity.' },
};
const imageUrl =
  content.image.src.startsWith('http') || content.image.src.startsWith('/')
    ? content.image.src
    : `${ASSETS_BASE_URL}/images/${content.image.src}`;
const isExternal = content.button.link.startsWith('http');
---

<section id="public-benefits" class="py-20 font-sans" style={{ backgroundColor: COLORS.cream }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="max-w-2xl">
        <SectionHeading>{content.title}</SectionHeading>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed font-light mt-8">
          {content.description}
        </p>
        <div class="h-1 w-24 mt-8 rounded-full" style={{ backgroundColor: COLORS.blue.royal }}></div>
        <div class="mt-8">
          <a
            href={content.button.link}
            class="cta-button inline-flex items-center justify-center px-6 py-3 rounded-full font-bold text-base shadow-lg transition-all hover:-translate-y-0.5"
            style={{ backgroundColor: COLORS.yellow, color: COLORS.blue.navy }}
            target={isExternal ? '_blank' : undefined}
            rel={isExternal ? 'noopener noreferrer' : undefined}
          >
            <span set:html={content.button.text} />
          </a>
        </div>
      </div>
      <div class="flex justify-center lg:justify-end">
        <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md aspect-[5/3]">
          <img
            src={imageUrl}
            alt={content.image.alt}
            class="w-full h-full object-cover object-center"
            loading="lazy"
            width="600"
            height="360"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-button :global(u) {
    text-decoration: underline;
  }
</style>
