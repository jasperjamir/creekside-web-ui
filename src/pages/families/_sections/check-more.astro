---
import { COLORS } from '../../../constants';

interface Props {
  content: { text: string; boldText?: string; link: string };
  dark?: boolean;
}

const { content = { text: '', boldText: '', link: '' }, dark = false } = Astro.props;
const isExternal = content.link?.startsWith('http');
---

<section
  class="pt-8 pb-20 relative overflow-hidden font-sans"
  style={{ backgroundColor: dark ? COLORS.blue.navy : COLORS.white }}
>
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto">
      <p class={`text-xl md:text-2xl leading-relaxed ${dark ? 'text-white' : 'text-black'}`}>
        <a
          href={content.link}
          class="check-more-link"
          style={{ color: dark ? COLORS.white : COLORS.blue.navy }}
          target={isExternal ? '_blank' : undefined}
          rel={isExternal ? 'noopener noreferrer' : undefined}
        >
          {content.text}{content.boldText && <strong>{content.boldText}</strong>}
        </a>
      </p>
    </div>
  </div>
</section>

<style>
  .check-more-link {
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.15s;
  }

  .check-more-link:hover {
    opacity: 0.85;
  }
</style>
