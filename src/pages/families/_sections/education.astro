---
import { ASSETS_BASE_URL, COLORS } from '../../../constants';

interface Props {
  content: {
    title: string;
    description: string;
    image: { src: string };
  };
}

const { content = { title: '', description: '', image: { src: '' } } } = Astro.props;
const imageUrl =
  content.image?.src && (content.image.src.startsWith('http') || content.image.src.startsWith('/'))
    ? content.image.src
    : content.image?.src
      ? `${ASSETS_BASE_URL}/images/${content.image.src}`
      : '';
---

<section id="education" class="py-20 font-sans" style={{ backgroundColor: COLORS.blue.navy }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="max-w-2xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          <span
            class="px-2 transform -skew-x-6 inline-block"
            style={{ backgroundColor: COLORS.green, color: COLORS.blue.navy }}
          >
            {content.title}
          </span>
        </h2>
        <p class="text-xl md:text-2xl text-blue-50 leading-relaxed font-light mt-8">
          {content.description}
        </p>
        <div class="h-1 w-24 mt-8 rounded-full bg-white/90"></div>
      </div>
      <div class="flex justify-center lg:justify-end">
        {imageUrl && (
          <div class="w-full max-w-lg overflow-hidden rounded-2xl shadow-md aspect-[5/3]">
            <img
              src={imageUrl}
              alt="Education resources at Creekside School"
              class="w-full h-full object-cover object-center"
              loading="lazy"
              width="600"
              height="360"
            />
          </div>
        )}
      </div>
    </div>
  </div>
</section>
