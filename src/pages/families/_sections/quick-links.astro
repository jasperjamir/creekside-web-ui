---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';

interface Props {
  links?: { title: string; description: string; href: string }[];
}

const { links = [] } = Astro.props;
---

<section class="quick-links-section font-sans" style={{ backgroundColor: COLORS.blue.soft }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="text-center mb-12">
      <SectionHeading>Sign up through our interest form</SectionHeading>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {links.map((link) => (
        <a
          href={link.href}
          class="block p-6 rounded-2xl border-2 transition-all hover:shadow-lg"
          style={{ backgroundColor: COLORS.white, borderColor: COLORS.blue.royal }}
        >
          <h3 class="text-xl font-bold mb-2" style={{ color: COLORS.blue.navy }}>
            {link.title}
          </h3>
          <p class="text-gray-600">{link.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .quick-links-section {
    padding: 4rem 0;
  }
</style>
