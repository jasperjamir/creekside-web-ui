---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroSection from './_sections/hero.astro';
import FamilyImpact from './_sections/family-impact.astro';
import ContactWithImage from './_sections/contact-with-image.astro';
import NavigatingSystems from './_sections/navigating-systems.astro';
import Benefits from './_sections/benefits.astro';
import PublicBenefits from './_sections/public-benefits.astro';
import PublicBenefitsLibrary from './_sections/public-benefits-library.astro';
import CheckMore from './_sections/check-more.astro';
import Education from './_sections/education.astro';
import EducationLibrary from './_sections/education-library.astro';
import Insurance from './_sections/insurance.astro';
import InsuranceLibrary from './_sections/insurance-library.astro';
import { FAMILIES_HERO, FAMILY_IMPACT_CONTENT, NAVIGATING_SYSTEMS_CONTENT, BENEFITS_CARDS, PUBLIC_BENEFITS_CONTENT, RESOURCE_LIBRARY_ITEMS, CONTACT_WITH_IMAGE_CONTENT, CHECK_MORE_CONTENT, EDUCATION_CONTENT, IEP_RESOURCES, INSURANCE_CONTENT, INSURANCE_RESOURCES } from './_constants';

const heroText = {
  imageAlt: FAMILIES_HERO.imageAlt,
  headingPrefix: 'Key resources for ',
  headingHighlight: 'Parents',
  subheading: '',
  ctaText: FAMILIES_HERO.ctaText,
  ctaHref: FAMILIES_HERO.ctaHref,
};
---

<PageLayout title="Parent Resources - The Creekside School">
  <HeroSection {...heroText} />
  <FamilyImpact content={FAMILY_IMPACT_CONTENT} />
  <ContactWithImage content={CONTACT_WITH_IMAGE_CONTENT} />
  <NavigatingSystems content={NAVIGATING_SYSTEMS_CONTENT} />
  <Benefits cards={BENEFITS_CARDS} />
  <PublicBenefits content={PUBLIC_BENEFITS_CONTENT} />
  <PublicBenefitsLibrary items={RESOURCE_LIBRARY_ITEMS} />
  <CheckMore content={CHECK_MORE_CONTENT} />
  <Education content={EDUCATION_CONTENT} />
  <EducationLibrary items={IEP_RESOURCES} />
  <CheckMore content={CHECK_MORE_CONTENT} />
  <Insurance content={INSURANCE_CONTENT} />
  <InsuranceLibrary items={INSURANCE_RESOURCES} />
  <CheckMore content={CHECK_MORE_CONTENT} />
</PageLayout>
