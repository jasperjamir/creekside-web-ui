---
import { COLORS } from '../constants';

interface Props {
  bannerText?: {
    headingHighlight: string;
    subheading: string;
  };
  /** Optional background image URL. */
  backgroundImage?: string;
}

const {
  bannerText = {
    headingHighlight: "Creekside is a place where excellence, passion, and dedication are at the heart of our work.",
    subheading: "Our team shares the commitment to integrity, collegiality, and the mission of improving the lives of our students and their families. Our deep sense of purpose fuels our motivation to embrace the challenges of our work and rise to meet the needs of our students."
  }
} = Astro.props;

const defaultBackgroundImage = "/images/creekside-campus.jpg";
const backgroundImage = Astro.props.backgroundImage ?? defaultBackgroundImage;
---

<section class="join-us-banner" style={`--bg-image: url(${backgroundImage}); --highlight-color: ${COLORS.blue.navy}`}>
  <div class="join-us-banner__content">
    <h1 class="join-us-banner__heading">
      <span class="join-us-banner__highlight" style={`background-color: ${COLORS.green}`}>
        {bannerText.headingHighlight}
      </span>
    </h1>

    <p class="join-us-banner__subheading">
      {bannerText.subheading}
    </p>
  </div>
</section>

<style>
  .join-us-banner {
    background:
      linear-gradient(to right, rgba(23, 37, 84, 0.9) 15%, rgba(23, 37, 84, 0.6) 50%, transparent 100%),
      var(--bg-image) no-repeat center center / cover;

    min-height: 85vh;
    display: flex;
    align-items: center;
    padding: 0 5%;
  }

  .join-us-banner__content {
    max-width: 1100px;
    padding-top: 4rem;
  }

  .join-us-banner__heading {
    font-size: 60px;
    font-weight: 800;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: transparent;
  }

  .join-us-banner__highlight {
    color: var(--highlight-color, #052049);
    padding: 0;
    display: inline;

    -webkit-box-decoration-break: clone;
    box-decoration-break: clone;
  }

  .join-us-banner__subheading {
    color: #ffffff;
    font-size: 32px;
    line-height: 1.6;
    max-width: 1100px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .join-us-banner {
      background:
        linear-gradient(to bottom, rgba(23, 37, 84, 0.8), rgba(23, 37, 84, 0.8)),
        var(--bg-image) no-repeat center center / cover;
      padding: 3rem 2rem;
    }

    .join-us-banner__heading {
      line-height: 1.5;
    }
  }
</style>
