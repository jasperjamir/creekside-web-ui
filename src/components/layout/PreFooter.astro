---
import { COLORS } from '../../constants';
import Button from '../ui/Button.astro';
---

<section class="py-16 font-sans" style={{ backgroundColor: COLORS.cream }}>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Newsletter -->
      <div>
        <h3 class="text-2xl font-bold mb-4" style={{ color: COLORS.blue.navy }}>
          Get the latest news and updates from The Creekside School
        </h3>
        <form class="flex gap-3" method="POST" action="/subscribe">
          <input
            type="email"
            name="email"
            placeholder="Email Address"
            required
            class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <Button variant="primary" type="submit">Subscribe</Button>
        </form>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-2xl font-bold mb-4" style={{ color: COLORS.blue.navy }}>The Creekside School</h3>
        <div class="space-y-3 text-gray-700">
          <div class="flex items-start">
            <svg class="mr-3 mt-1 flex-shrink-0" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>5629 Lean Avenue,<br/>San Jose, CA 95123</span>
          </div>
          <div class="flex items-center">
            <svg class="mr-3 flex-shrink-0" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:408-448-2494" class="hover:underline">408-448-2494</a>
          </div>
          <div class="flex items-center">
            <svg class="mr-3 flex-shrink-0" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:info@creeksideschool.org" class="hover:underline">info@creeksideschool.org</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
