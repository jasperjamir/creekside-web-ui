---
interface Props {
  pillar: {
    title: string;
    icon: string;
    text: string;
  };
}

const { pillar } = Astro.props;
const { COLORS } = await import('../../constants');
---

<div class="group relative bg-white rounded-xl overflow-hidden shadow-lg border-b-4 hover:-translate-y-1 transition-all duration-300 h-full pillar-card" style={{ borderBottomColor: COLORS.blue.royal }}>
  <div class="h-2" style={{ background: `linear-gradient(to right, ${COLORS.blue.royal}, ${COLORS.blue.soft})` }}></div>
  <div class="p-6">
    <div class="w-12 h-12 rounded-full flex items-center justify-center mb-4 transition-colors pillar-icon" style={{ backgroundColor: COLORS.blue.light, color: COLORS.blue.navy }}>
      <!-- Icon placeholder - will be styled with CSS or icon library -->
      <span class="text-2xl">{pillar.icon === "Users" ? "ğŸ‘¥" : pillar.icon === "Smile" ? "ğŸ˜Š" : pillar.icon === "HandHeart" ? "ğŸ¤" : pillar.icon === "BarChart" ? "ğŸ“Š" : pillar.icon === "BookOpen" ? "ğŸ“š" : pillar.icon === "User" ? "ğŸ‘¤" : pillar.icon === "Heart" ? "â¤ï¸" : "â€¢"}</span>
    </div>
    <h3 class="text-xl font-bold mb-3" style={{ color: COLORS.blue.navy }}>{pillar.title}</h3>
    <p class="text-gray-600 leading-relaxed text-sm">
      {pillar.text}
    </p>
  </div>
</div>

<script>
  // Add hover effect for icon background color
  const pillarCards = document.querySelectorAll('.pillar-card');
  const greenColor = '#A4D16A';
  const blueLight = '#B9D9EB';
  
  pillarCards.forEach(card => {
    const icon = card.querySelector('.pillar-icon');
    if (icon) {
      card.addEventListener('mouseenter', () => {
        icon.style.backgroundColor = greenColor;
      });
      
      card.addEventListener('mouseleave', () => {
        icon.style.backgroundColor = blueLight;
      });
    }
  });
</script>
