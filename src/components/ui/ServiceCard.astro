---
interface Props {
  title: string;
  imageUrl: string;
  imageAlt: string;
}

const { title, imageUrl, imageAlt } = Astro.props;
---

<article class="group overflow-hidden rounded-2xl shadow-md bg-white hover:shadow-lg transition-shadow">
  <div class="aspect-[4/3] overflow-hidden">
    <img
      src={imageUrl}
      alt={imageAlt}
      class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
      width="400"
      height="300"
    />
  </div>
  <div class="px-4 py-3">
    <h3 class="text-xl font-bold leading-tight" style="color: var(--color-navy, #052049)">
      {title}
    </h3>
  </div>
</article>
