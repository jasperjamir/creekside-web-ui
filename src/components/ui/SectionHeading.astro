---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
const { COLORS } = await import('../../constants');
---

<h2 class={`text-3xl md:text-4xl font-bold mb-6 ${className}`} style={{ color: COLORS.blue.navy }}>
  <span class="px-2 leading-tight inline-block transform -skew-x-3" style={{ backgroundColor: COLORS.green }}>
    <span class="block transform skew-x-3">
      <slot />
    </span>
  </span>
</h2>
