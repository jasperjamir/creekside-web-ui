---
import { COLORS } from '../../../constants';
import SectionHeading from '../../../components/ui/SectionHeading.astro';
import PillarCard from '../../../components/ui/PillarCard.astro';

interface Pillar {
  title: string;
  icon: string;
  text: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  pillars?: readonly Pillar[];
}

const { heading = '', subheading = '', pillars = [] } = Astro.props;
---

<section class="py-20 bg-white relative overflow-hidden">
  <!-- Decorative background element -->
  <div class="absolute top-0 right-0 w-1/3 h-full skew-x-12" style={{ backgroundColor: `${COLORS.blue.light}33` }}></div>
  
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <SectionHeading>{heading}</SectionHeading>
      <h3 class="text-lg text-gray-600 mt-4">
        {subheading}
      </h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {pillars.map((pillar, idx) => (
        <div class={idx === pillars.length - 1 ? 'md:col-span-2 lg:col-span-1 lg:col-start-4' : ''}>
          <PillarCard pillar={pillar} />
        </div>
      ))}
    </div>
  </div>
</section>
