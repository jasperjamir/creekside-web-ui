---
import { COLORS } from '../../../constants';
---

<section class="py-20 relative" style={{ backgroundColor: COLORS.blue.navy }}>
  <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-5"></div>
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <h2 class="text-3xl font-bold text-white text-center mb-12">
      What are you interested in learning about?
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {[
        { title: "Admission Process", icon: "BookOpen", link: "/families/admissions-process" },
        { title: "Community Partnerships", icon: "Users", link: "/what-we-do/community-partnerships" },
        { title: "Donating to Creekside", icon: "Heart", link: "/support/donate" },
        { title: "Job Opportunities", icon: "User", link: "/join-us/join-our-team" }
      ].map((item) => (
        <a
          href={item.link}
          class="group flex flex-col items-center p-8 bg-white/5 border border-white/10 rounded-2xl hover:bg-white/10 transition-all duration-300 text-center nav-grid-item"
          style={{ borderColor: 'rgba(255, 255, 255, 0.1)' }}
        >
          <div class="mb-4 group-hover:scale-110 transition-transform" style={{ color: COLORS.green }}>
            <!-- Icon placeholder - would need icon library -->
            <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center">
              <span class="text-2xl">{item.icon === "BookOpen" ? "ğŸ“š" : item.icon === "Users" ? "ğŸ‘¥" : item.icon === "Heart" ? "â¤ï¸" : "ğŸ‘¤"}</span>
            </div>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
          <span class="group-hover:text-white flex items-center text-sm font-semibold transition-colors justify-center" style={{ color: COLORS.blue.light }}>
            Learn More 
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  // Add hover effect for border color
  const navItems = document.querySelectorAll('.nav-grid-item');
  const greenColor = '#A4D16A';
  
  navItems.forEach(item => {
    item.addEventListener('mouseenter', () => {
      item.style.borderColor = greenColor;
    });
    
    item.addEventListener('mouseleave', () => {
      item.style.borderColor = 'rgba(255, 255, 255, 0.1)';
    });
  });
</script>
