---
import PageLayout from '../layouts/PageLayout.astro';
import { COLORS } from '../constants';
---

<PageLayout title="Contact Us - The Creekside School">
  <div class="min-h-screen py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <h1 class="text-4xl font-bold mb-8" style={{ color: COLORS.blue.navy }}>Contact Us</h1>
      <div class="max-w-2xl space-y-6">
        <div class="flex items-start">
          <svg class="mr-3 mt-1 flex-shrink-0" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" style={{ color: COLORS.blue.royal }}>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <p class="font-semibold mb-1">The Creekside School</p>
            <p class="text-gray-600">5629 Lean Avenue,<br/>San Jose, CA 95123</p>
          </div>
        </div>
        <div class="flex items-center">
          <svg class="mr-3 flex-shrink-0" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" style={{ color: COLORS.blue.royal }}>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <a href="tel:408-448-2494" class="text-gray-700 hover:underline">408-448-2494</a>
        </div>
        <div class="flex items-center">
          <svg class="mr-3 flex-shrink-0" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" style={{ color: COLORS.blue.royal }}>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <a href="mailto:info@creeksideschool.org" class="text-gray-700 hover:underline">info@creeksideschool.org</a>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
