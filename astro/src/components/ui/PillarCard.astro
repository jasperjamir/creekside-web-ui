---
interface Props {
  pillar: {
    title: string;
    icon: string;
    text: string;
  };
}

const { pillar } = Astro.props;
const { COLORS } = await import('../../constants');
---

<div class="group relative bg-white rounded-xl overflow-hidden shadow-lg border-b-4 hover:-translate-y-1 transition-all duration-300 h-full" style={{ borderBottomColor: COLORS.blue.royal }}>
  <div class="h-2" style={{ background: `linear-gradient(to right, ${COLORS.blue.royal}, ${COLORS.blue.soft})` }}></div>
  <div class="p-6">
    <div class="w-12 h-12 rounded-full flex items-center justify-center mb-4 transition-colors" style={{ backgroundColor: COLORS.blue.light, color: COLORS.blue.navy }}>
      <!-- Icon will be rendered here -->
    </div>
    <h3 class="text-xl font-bold mb-3" style={{ color: COLORS.blue.navy }}>{pillar.title}</h3>
    <p class="text-gray-600 leading-relaxed text-sm">
      {pillar.text}
    </p>
  </div>
</div>
